{
  "name": "server",
  "version": "0.1.0",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint .",
    "clean": "rimraf dist/*",
    "start:prod": "npx dotenv -e .env.prod -- node src/index.js",
    "dev": "npx dotenv -e .env.dev -- ts-node-dev --respawn src/index.ts",
    "dev:debug": "npx dotenv -e .env.dev -- ts-node-dev --inspect=0.0.0.0:9229 src/index.ts",
    "build": "tsc",
    "postbuild": "mkdir -p dist/server/prisma && cp package.json dist/server/ && cp .env.prod dist/server/ && cp prisma/schema.prisma dist/server/prisma/ && cp -r prisma/migrations dist/server/prisma/",
    "deploy": "npm run clean && npm run build && npm run postbuild",
    "dbr:dev": "dotenv -e .env.dev -- npx prisma migrate dev --name init && ts-node src/database/seed.ts",
    "dbr:prod": "npx dotenv -e .env.prod -- npx prisma migrate deploy && npx prisma generate"
  },
  "keywords": [
    "node",
    "express",
    "prisma",
    "typescript",
    "backend"
  ],
  "author": "Olennikov Vladimir <ath31st@yandex.ru>",
  "license": "MIT",
  "description": "A Node.js server with Express and TypeScript for handling backend operations.",
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "express": "^4.21.2",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "prettier": "^3.3.3",
    "prisma": "^6.2.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.4.0"
  },
  "resolutions": {
    "nth-check": "^2.1.1"
  }
}